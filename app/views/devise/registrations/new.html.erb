<div class="container">
  <div class="row">

<h2 style="margin-left:15px">Registrieren</h2>

<div class="col-md-6">
  <em> Pflichtfelder </em> <br><br>
 <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <div class="form-group" , id="registration_form">
    <%= f.label :email,"Email:" %><br />
    <%= f.email_field :email, autofocus: true, class: "form-control" %>  <br>

    <%= f.label :password, "Passwort:" %>
    <% if @minimum_password_length %>
    <em>( mindestens <%= @minimum_password_length %> Zeichen)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "off", class: "form-control" %> <br>

    <%= f.label :password_confirmation, "Passwort bestätigen:" %>
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %> <br>

    <%= f.label :company_name,"Firmenname:" %>
    <%= f.text_field :company_name, class: "form-control" %> <br>

    <div id="registration_actions">
    <%= f.submit "Registrieren  ", class: "btn btn-primary" %>
    <span id="devise_links"><%= render "devise/shared/links" %></span>
    </div>

  </div>
</div>
  <div class="col-md-6">
    <em> optionale Felder </em> <br> <br>
      <div class="form-group", id="registration_form">
      <%= f.label :street, "Straße:" %>
      <%= f.text_field :street, class: "form-control"  %> <br>

      <%= f.label :city,"Stadt:" %>
      <%= f.text_field :city, class: "form-control"  %> <br>

      <%= f.label :postcode,"PLZ:" %>
      <%= f.text_field :postcode, class: "form-control"  %> <br>

      <%= f.label :country,"Land" %>
      <%= f.text_field :country, class: "form-control"  %> <br>

      <%= f.label :contact_number,"Telefonnummer:" %>
      <%= f.text_field :contact_number, class: "form-control"  %> <br>

      <%= f.label :description,"Beschreibung:" %>
      <%= f.text_area :description, class: "form-control"  %> <br>


<% end %>
</div>
</div>

</div>
</div>
