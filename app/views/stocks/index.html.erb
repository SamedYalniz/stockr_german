<div class='container'>
  <%= link_to 'Produkt zum Lagerbestand hinzufügen', new_user_stock_path(current_user) %>
  <hr>
  <% if current_user.stock %>
  <% if current_user.stock.products.any? %>
    <% current_user.stock.products.each do |product| %>
      <div class="list-group">
      <%= product.name %> | Herkunftsland: <%= product.country_of_origin %> | Paketgröße: <%= product.boxsize %> | Paketpreis: <%= product.boxprice %> | Produktklasse: <%= product.product_class %>
    </div>
    <% end %>
  <% end %>
<% end %>


</div>
