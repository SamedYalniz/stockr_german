<div class="container">
<%= image_tag @user.image.url(:medium) %>

          <% if @user == current_user %>
          <%= form_for current_user, html: {multipart: true, class: "form-inline"} do |f| %>

            <!-- Trigger the modal with a button -->
            <button type="button" class="btn btn-primary btn-md" data-toggle="modal" data-target="#myModal" id="change-profile-picture-btn">Change Picture</button>

            <!-- Modal -->
            <div class="modal fade" id="myModal" role="dialog">
              <div class="modal-dialog">

                <!-- Modal content-->
                <div class="modal-content">
                  <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Change Profile Picture</h4>
                  </div>
                  <div class="modal-body">
                    <p>Please, choose a file to make it your default profile picture.</p>
                    <%= f.file_field :image %>
                  </div>
                  <div class="modal-footer">
                    <%= f.submit 'Upload picture', class: "btn btn-default btn-primary" %>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                  </div>
                </div>

              </div>
            </div>

          <% end %>
          <% end %>

<%= @user.company_name %>'s profile <br> <br>

Description: <%= @user.description %> </br>
<div class="address">
Address: <br>
Street:  <%= @user.street %> </br>
City:    <%= @user.city %></br>
Postcode: <%= @user.postcode %></br>
Country: <%= @user.country %></br>

      </div>
      <br>
Contact no: <%= @user.contact_number %> <br>
Email: <%= @user.email %> </br></br>

<%= link_to "Der aktuelle Lagerbestand", user_stocks_path(@user) %>


<% if @user == current_user %>
<%= link_to "Informationen bearbeiten", edit_user_registration_path(current_user) %>
<% end %>

</div>
