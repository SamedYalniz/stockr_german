<%= form_for [current_user, @product] do |form| %>
  <%= form.label :name %>
  <%= form.text_field :name %>
  <%= form.label :country_of_origin %>
  <%= form.text_field :country_of_origin %>
  <%= form.label :boxsize %>
  <%= form.text_field :boxsize %>
  <%= form.label :boxprice %>
  <%= form.text_field :boxprice %>
  <%= form.label :product_class %>
  <%= form.text_field :product_class %>
  <%= form.submit class: "btn btn-primary" %>
<% end %>
